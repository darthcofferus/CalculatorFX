<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import com.github.darthcofferus.calculatorfx.gui.InputField?>

<AnchorPane id="anchor-pane" fx:id="anchorPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.darthcofferus.calculatorfx.gui.Controller">
    <StackPane id="stack-pane" fx:id="stackPane" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" BorderPane.alignment="CENTER">
        <InputField fx:id="inputField" id="input-field" />
        <TextField fx:id="bottomField" id="bottom-field" editable="false" alignment="BOTTOM_RIGHT" StackPane.alignment="BOTTOM_RIGHT">
            <StackPane.margin>
                <Insets bottom="5" left="5" right="5" />
            </StackPane.margin>
        </TextField>
    </StackPane>
    <GridPane id="grid-pane" fx:id="gridPane" AnchorPane.bottomAnchor="2" AnchorPane.leftAnchor="2" AnchorPane.rightAnchor="2" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" percentHeight="20" />
            <RowConstraints vgrow="ALWAYS" percentHeight="20" />
            <RowConstraints vgrow="ALWAYS" percentHeight="20" />
            <RowConstraints vgrow="ALWAYS" percentHeight="20" />
            <RowConstraints vgrow="ALWAYS" percentHeight="20" />
        </rowConstraints>
        <children>
            <GridPane id="grid-pane" GridPane.columnIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" />
                </rowConstraints>
                <children>
                    <Button id="left-bracket-button" mnemonicParsing="false" text="(" />
                    <Button id="right-bracket-button" mnemonicParsing="false" text=")" GridPane.columnIndex="1" />
                </children>
            </GridPane>
            <Button id="delete-button" mnemonicParsing="false" text="⬅" GridPane.columnIndex="2" />
            <Button id="operator-button" mnemonicParsing="false" text="÷" GridPane.columnIndex="3" />
            <Button id="number-button" mnemonicParsing="false" text="7" GridPane.rowIndex="1" />
            <Button id="number-button" mnemonicParsing="false" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button id="number-button" mnemonicParsing="false" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button id="operator-button" mnemonicParsing="false" text="×" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Button id="number-button" mnemonicParsing="false" text="4" GridPane.rowIndex="2" />
            <Button id="number-button" mnemonicParsing="false" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button id="number-button" mnemonicParsing="false" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button id="operator-button" mnemonicParsing="false" text="−" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Button id="number-button" mnemonicParsing="false" text="1" GridPane.rowIndex="3" />
            <Button id="number-button" mnemonicParsing="false" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button id="number-button" mnemonicParsing="false" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Button id="operator-button" mnemonicParsing="false" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            <Button id="button" mnemonicParsing="false" text="\%" GridPane.rowIndex="4" />
            <Button id="number-button" mnemonicParsing="false" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button id="button" mnemonicParsing="false" text="," GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button id="equal-button" mnemonicParsing="false" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" />
            <Button id="clear-button" mnemonicParsing="false" text="C" />
        </children>
    </GridPane>
</AnchorPane>
